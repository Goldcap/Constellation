<map table="conversation_notification" result="conversation_notification_list_datamap">
	<column column="fk_conversation_guid" type="VARCHAR" size="255" key="" order="1"></column>
	<column column="conversation_notification_type" type="TINYINT" size="4" key="" order="2"></column>
	<column column="conversation_notification_date_created" type="TIMESTAMP" size="" key="" order="3"></column>
	<column column="conversation_notification_date_sent" type="TIMESTAMP" size="" key="" order="4"></column>
	<column column="conversation_notification_id" type="INTEGER" size="11" key="PRI" order="5"></column>
	<join local="fk_conversation_guid" foreigntable="conversation" foreign="conversation_guid" left="false">
    <foreigncolumn column="conversation_author" type="VARCHAR" size="255" key="" order="1"></foreigncolumn>
		<foreigncolumn column="conversation_author_image" type="VARCHAR" size="255" key="" order="2"></foreigncolumn>
		<foreigncolumn column="fk_author_id" type="INTEGER" size="11" key="" order="3"></foreigncolumn>
		<foreigncolumn column="fk_film_id" type="INTEGER" size="11" key="" order="4"></foreigncolumn>
		<foreigncolumn column="conversation_date_created" type="TIMESTAMP" size="" key="" order="5"></foreigncolumn>
		<foreigncolumn column="conversation_sequence" type="INTEGER" size="11" key="" order="6"></foreigncolumn>
		<foreigncolumn column="conversation_thread" type="VARCHAR" size="255" key="" order="7"></foreigncolumn>
		<foreigncolumn column="conversation_body" type="LONGVARCHAR" size="" key="" order="8"></foreigncolumn>
		<foreigncolumn column="conversation_rating" type="INTEGER" size="11" key="" order="9"></foreigncolumn>
		<foreigncolumn column="conversation_status" type="TINYINT" size="4" key="" order="10"></foreigncolumn>
		<foreigncolumn column="conversation_guid" type="VARCHAR" size="255" key="" order="11"></foreigncolumn>
		<foreigncolumn column="fk_promoter_id" type="INTEGER" size="11" key="" order="12"></foreigncolumn>
		<foreigncolumn column="conversation_id" type="INTEGER" size="11" key="PRI" order="13"></foreigncolumn>
  </join>
	<criterion distinct="true">
		<criteria value="" column="conversation_notification_date_sent" constant="ISNULL"></criteria>
		<ascorderby column="conversation_notification_id"></ascorderby>
		<!--<descorderby column="column_name" />
		<criteria value="0" column="column_name"/>--></criterion>
	<pagination>
		<pagesperpage value="5"></pagesperpage>
		<recordssperpage value="0"></recordssperpage>
		<page value="1" var="page"></page>
		<sort var="sort"></sort>
	</pagination>
</map>