<map table="user_action" result="Login" allow_add="false">
  <column column="user_action_id" name="object_id" type="INTEGER" size="" key="" order="1" format="useraction%d" />
  <column column="user_action_id" name="object_type" type="INTEGER" size="" key="" order="1" format="useraction" />
  <column column="user_action_id" name="object_name" type="INTEGER" size="" key="" order="2" format="useraction%d" />
  <column column="user_action_id" type="INTEGER" size="" key="" order="1"></column>
  <column column="fk_user_id" name="user_action_user_id" type="INTEGER" size="" key="" order="1"></column>
  <column column="user_action_ip_address" type="VARCHAR" size="255" key="" order="3"></column>
  <column column="user_action_user_agent" type="VARCHAR" size="255" key="" order="4"></column>
  <column column="user_action_date" type="datetime" size="pretty" key="" order="5" util="item::dateW3XMLIN"></column>
  <column column="user_action_data" type="TEXT" size="" key="PRI" order="6" hidden="true"></column>
  <join table="action" local="fk_action_id" foreign="action_id" left="true">
    <foreigncolumn column="action_name" name="user_action_action" type="VARCHAR" size="255" key="" order="10"/>
  </join>
  <join localtable="user_action" local="fk_user_id" foreigntable="user" foreign="user_id" left="false">
    <foreigncolumn column="user_default_timezone" type="INTEGER" size="" key="" order="3" />
  </join>
  <criterion limit="0" distinct="true">
    <ascorderby column="user_action_id"></ascorderby>
    <criteria scope="PROCESS" value="action_id" column="user_action_id"/>
    <!--         <descorderby column="column_name" />
    <criteria value="0" column="column_name"/>--></criterion>
  <pagination>
    <pagesperpage value="5"></pagesperpage>
    <recordssperpage value="5"></recordssperpage>
    <page value="1" var="page"></page>
    <sort var="sort"></sort>
  </pagination>
</map>
