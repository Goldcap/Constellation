<map table="chat" result="Chat" allow_add="false"  title="Chat">
  <!--<column column="id" name="UUID" type="VARCHAR" size="255" key="" order="1"></column>-->
  <column column="screening" name="Screening" type="DATETIME" size="255" key="" order="2" format="null"></column>
  <column column="fname" name="First" type="VARCHAR" size="" key="" order="3"></column>
  <column column="lname" name="Last" type="VARCHAR" size="" key="" order="4" ></column>
  <column column="email" name="EMail" type="VARCHAR" size="" key="" order="4" ></column>
  <column column="username" name="Username" type="VARCHAR" size="" key="" order="6" ></column>
  <column column="date" name="Date" type="VARCHAR" size="" key="" order="7" ></column>
  <column column="time" name="Time" type="VARCHAR" size="" key="" order="7" ></column>
  <sql connection="propel">
    <sqlselect>
      <![CDATA[
      select distinct screening.screening_unique_key,
      user.user_fname,
      user.user_lname,
      user.user_email,
      user.user_username,
      screening.screening_date,
      screening.screening_time
      from audience
      inner join screening
      on audience.fk_screening_id = screening.screening_id
      inner join user
      on user.user_id = audience.fk_user_id
      where screening.fk_film_id = ?
      and user.user_email not in ('amadsen@gmail.com','j00lawler@gmail.com')
      order by screening.screening_date,
      screening.screening_time,
      screening.screening_id
      ]]>
    </sqlselect>
   </sql>    
  <criterion limit="0" distinct="true">
    <!--         <descorderby column="column_name" />
    <criteria value="0" column="column_name"/>-->
    <criteria scope="GET" value="id" type="INT"></criteria>
    
  </criterion>
  <pagination>
    <pagesperpage value="5"></pagesperpage>
    <recordssperpage value="0"></recordssperpage>
    <page value="1" var="page"></page>
    <sort var="sort"></sort>
  </pagination>
  <!--<maplinks>
    <maplink column="Session" base="/stats/session/">
      <attribute name="Session"></attribute>
    </maplink>
  </maplinks>-->
</map>
