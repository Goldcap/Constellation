<map table="film_film" result="film" allow_add="false" title="Unrelated Films">
  <column column="film_id" type="INTEGER" size="11" key="" order="1" hidden="true"></column>
  <column column="film_name" name="Name" type="INTEGER" size="11" key="" order="2"></column>
  <sql connection="propel">
  	<sqlselect>
		<![CDATA[
		select film_id,
		film_name
		from film
		where film_name != ''
		and film_id <> ?
		and film_id not in (
			select fk_film_child_id
			from program_film
			where fk_film_id = ?
			and program_film_level = 1
		)
		]]>
  	</sqlselect>
  </sql>
  <criterion limit="0" distinct="true">
    <ascorderby column="film_name"></ascorderby>
    <criteria scope="GET" value="id" column="fk_film_id"></criteria>
    <criteria scope="GET" value="id" column="fk_film_id"></criteria>
    <!-- <descorderby column="column_name" />
    <criteria value="0" column="column_name"/>--></criterion>
  <pagination>
    <pagesperpage value="5"></pagesperpage>
    <recordssperpage value="100"></recordssperpage>
    <page value="1" var="page"></page>
    <sort var="sort"></sort>
  </pagination>
</map>
