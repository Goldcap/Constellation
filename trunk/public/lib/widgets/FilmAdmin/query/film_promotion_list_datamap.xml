<map table="film_promotion" result="promotion" allow_add="false">
  <column column="fk_film_id" type="INTEGER" size="11" key="" order="1" hidden="true"></column>
  <column column="fk_promotion_id" type="INTEGER" size="11" key="" order="2" hidden="true"></column>
  <column column="film_promotion_priority" name="Priority" type="INTEGER" size="11" key="" order="3"></column>
  <column column="film_promotion_id" type="INTEGER" size="11" key="PRI" order="4" hidden="true"></column>
  <join foreigntable="film" local="fk_film_id" foreign="film_id" left="false">
    <foreigncolumn column="film_name" name="Film Name" type="INTEGER" size="" key="" order="2" />
  </join>
  <join foreigntable="promotion" local="fk_promotion_id" foreign="promotion_id" left="false">
    <foreigncolumn column="promotion_name" name="Promotion Name" type="INTEGER" size="" key="" order="1" />
  </join>
  <criterion limit="0" distinct="true">
    <ascorderby column="film_promotion_id"></ascorderby>
    <criteria scope="GET" value="id" column="fk_film_id"></criteria>
    <!-- <descorderby column="column_name" />
    <criteria value="0" column="column_name"/>--></criterion>
  <pagination>
    <pagesperpage value="5"></pagesperpage>
    <recordssperpage value="5"></recordssperpage>
    <page value="1" var="page"></page>
    <sort var="sort"></sort>
  </pagination>
  <maplinks>
    <maplink column="fk_film_id" base="/film_promotion/detail/">
      <attribute name="film_promotion_id"></attribute>
    </maplink>
  </maplinks>
</map>
