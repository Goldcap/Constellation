<?xml version="1.0" encoding="UTF-8"?>
<module name="login" baseurl="/modules/login/">
	<attributes>
    <assets>
	  </assets>
  </attributes>
	<content>
    <AFORM>
      <FORMNAME>Password</FORMNAME>
      <FORMACTION>$self</FORMACTION>
      <JSVALIDATE>TRUE</JSVALIDATE>
      <FORMCLASS/>
      <SERVERVALIDATE>TRUE</SERVERVALIDATE>
      <PASSTHROUGHVALUES>TRUE</PASSTHROUGHVALUES>
      <QUERYVALUES>TRUE</QUERYVALUES>
      <SHOWERRORS>FALSE</SHOWERRORS>
      <REQS>FALSE</REQS>
      <FORMELEMENTGROUP>
        <FORMELEMENT>
          <NAME>brochurehead</NAME>
          <DISPLAY>Change Password</DISPLAY>
          <TYPE>display</TYPE>
          <DEFAULT/>
          <CLASS/>
          <VTIP/>
          <REQUIRED/>
          <DISPLAYCLASS>headline</DISPLAYCLASS>
          <SIZE/>
        </FORMELEMENT>
        <FORMELEMENT>
          <NAME>requirenotice</NAME>
          <DISPLAY>* REQUIRED FIELDS</DISPLAY>
          <TYPE>display</TYPE>
          <DEFAULT/>
          <CLASS/>
          <VTIP/>
          <REQUIRED/>
          <DISPLAYCLASS>reqmessage</DISPLAYCLASS>
          <SIZE/>
        </FORMELEMENT>
      </FORMELEMENTGROUP>
      <FORMELEMENTGROUP>
        <FORMELEMENT>
          <NAME>errornotice</NAME>
          <DISPLAY/>
          <TYPE>errornotice</TYPE>
          <DEFAULT>Please complete Fields outlined in red.</DEFAULT>
          <CLASS>errornotice</CLASS>
          <VTIP/>
          <REQUIRED/>
          <DISPLAYCLASS>col2</DISPLAYCLASS>
          <SIZE/>
        </FORMELEMENT>
      </FORMELEMENTGROUP>
      <FORMELEMENTGROUP>
        <FORMELEMENT>
          <NAME/>
          <DISPLAY>Use this form to modify your current password.</DISPLAY>
          <TYPE>display</TYPE>
          <DEFAULT/>
          <CLASS/>
          <VTIP/>
          <REQUIRED/>
          <DISPLAYCLASS>formsubhead</DISPLAYCLASS>
          <SIZE/>
        </FORMELEMENT>
      </FORMELEMENTGROUP>
      <FORMELEMENTGROUP>
        <FORMELEMENT>
          <NAME/>
          <DISPLAY/>
          <TYPE>hr</TYPE>
          <DEFAULT/>
          <CLASS/>
          <VTIP/>
          <REQUIRED/>
          <DISPLAYCLASS>linebreak</DISPLAYCLASS>
          <SIZE/>
        </FORMELEMENT>
      </FORMELEMENTGROUP>
      <FORMELEMENTGROUP>
        <FORMELEMENT>
          <NAME/>
          <DISPLAY>Current Password *</DISPLAY>
          <TYPE>display</TYPE>
          <DEFAULT/>
          <CLASS/>
          <VTIP/>
          <REQUIRED/>
          <DISPLAYCLASS>col1</DISPLAYCLASS>
          <SIZE/>
        </FORMELEMENT>
        <FORMELEMENT>
          <NAME>current_password</NAME>
          <DISPLAY/>
          <TYPE>password</TYPE>
          <DEFAULT/>
          <CLASS>input</CLASS>
          <VTIP>oneChar</VTIP>
          <REQUIRED>TRUE</REQUIRED>
          <DISPLAYCLASS>col2</DISPLAYCLASS>
          <SIZE/>
        </FORMELEMENT>
      </FORMELEMENTGROUP>
      <FORMELEMENTGROUP>
        <FORMELEMENT>
          <NAME/>
          <DISPLAY>New Password *</DISPLAY>
          <TYPE>display</TYPE>
          <DEFAULT/>
          <CLASS/>
          <VTIP/>
          <REQUIRED/>
          <DISPLAYCLASS>col1</DISPLAYCLASS>
          <SIZE/>
        </FORMELEMENT>
        <FORMELEMENT>
          <NAME>new_password</NAME>
          <DISPLAY/>
          <TYPE>password</TYPE>
          <DEFAULT/>
          <CLASS>input</CLASS>
          <VTIP>oneChar</VTIP>
          <REQUIRED>TRUE</REQUIRED>
          <DISPLAYCLASS>col2</DISPLAYCLASS>
          <SIZE/>
        </FORMELEMENT>
      </FORMELEMENTGROUP>
      <FORMELEMENTGROUP>
        <FORMELEMENT>
          <NAME/>
          <DISPLAY>Confirm New Password *</DISPLAY>
          <TYPE>display</TYPE>
          <DEFAULT/>
          <CLASS/>
          <VTIP/>
          <REQUIRED/>
          <DISPLAYCLASS>col1</DISPLAYCLASS>
          <SIZE/>
        </FORMELEMENT>
        <FORMELEMENT>
          <NAME>new_password_confirm</NAME>
          <DISPLAY/>
          <TYPE>password</TYPE>
          <DEFAULT/>
          <CLASS>input</CLASS>
          <VTIP>js:confirmPassword()</VTIP>
          <REQUIRED>TRUE</REQUIRED>
          <DISPLAYCLASS>col2</DISPLAYCLASS>
          <SIZE/>
        </FORMELEMENT>
      </FORMELEMENTGROUP>
      <FORMELEMENTGROUP>
        <FORMELEMENT>
          <NAME/>
          <DISPLAY/>
          <TYPE>hr</TYPE>
          <DEFAULT/>
          <CLASS/>
          <VTIP/>
          <REQUIRED/>
          <DISPLAYCLASS>linebreak_float</DISPLAYCLASS>
          <SIZE/>
        </FORMELEMENT>
      </FORMELEMENTGROUP>
      <FORMELEMENTGROUP>
        <FORMELEMENT>
          <NAME>submit</NAME>
          <DISPLAY/>
          <TYPE>submit</TYPE>
          <DEFAULT onclick="setAction(this,'submit');">submit</DEFAULT>
          <CLASS>submitter</CLASS>
          <VTIP/>
          <REQUIRED>FALSE</REQUIRED>
          <DISPLAYCLASS/>
          <SIZE/>
        </FORMELEMENT>
      </FORMELEMENTGROUP>
    </AFORM>
  </content>
</module>
