<map table="audience" result="Review" allow_add="false">
  <column column="audience_username" name="Username" type="VARCHAR" size="255" key="" order="1"></column>
  <column column="audience_review" name="Review" type="LONGVARCHAR" size="" key="" order="2"></column>
  <column column="audience_review_status" name="Review Status" type="TINYINT" size="Not Live,Live" key="" order="3" format="enum"></column>
  <column column="audience_id" type="INTEGER" size="11" key="PRI" order="4" hidden="true"></column>
  <column column="audience_created_at" name="Created" type="TIMESTAMP" size="" key="" order="5" formate="datetime"></column>
  <column column="audience_ip_addr" name="IP" type="VARCHAR" size="15" key="" order="6"></column>
  <join local="fk_screening_id" foreigntable="screening" foreign="screening_id" left="false">
    <foreigncolumn column="fk_film_id" type="INTEGER" size="" key="" order="14" hidden="true" />
  </join>
  <criterion limit="0" distinct="true">
    <ascorderby column="audience_id"></ascorderby>
    <criteria value="null" column="audience_review" constant="ISNOTNULL" />
    <criteria table="screening" scope="GET" value="id" column="fk_film_id" />
    <!-- <descorderby column="column_name" />
    <criteria value="0" column="column_name"/>-->
  </criterion>
  <pagination>
    <pagesperpage value="5"></pagesperpage>
    <recordssperpage value="5"></recordssperpage>
    <page value="1" var="page"></page>
    <sort var="sort"></sort>
  </pagination>
  <maplinks>
    <maplink column="Review" base="/review/detail/">
      <attribute name="audience_id"></attribute>
    </maplink>
  </maplinks>
</map>
