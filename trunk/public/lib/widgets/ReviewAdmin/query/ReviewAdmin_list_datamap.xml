<map table="film" result="Film" allow_add="false">
 <column column="film_name" name="Film_Name" type="VARCHAR" size="255" key="" order="1"></column>
 <column column="film_production_company" name="Production_Company" type="VARCHAR" size="255" key="" order="2" format="null"></column>
 <column column="film_featured" name="Featured" type="TINYINT" size="4" key="" order="3" format="bool"></column>
 <column column="film_created_at" name="Date" type="TIMESTAMP" size="monthtimezone" key="" order="6" format="dateformat"></column>
 <column column="film_running_time" name="Running Time" type="INTEGER" size="11" key="" order="8"></column>
 <column column="film_id" name="Reviews" type="INTEGER" size="11" key="PRI" order="10" util="item::reviewCount"></column>
 <column column="film_id" type="INTEGER" size="11" key="PRI" order="11" hidden="true"></column>
  <criterion limit="0" distinct="true">
    <descorderby column="film_created_at"></descorderby>
    <!-- <descorderby column="column_name" />
    <criteria value="0" column="column_name"/>--></criterion>
  <pagination>
    <pagesperpage value="5"></pagesperpage>
    <recordssperpage value="15"></recordssperpage>
    <page value="1" var="page"></page>
    <sort var="sort"></sort>
  </pagination>
  <maplinks>
    <maplink column="Film_Name" base="/review/film/">
      <attribute name="film_id"></attribute>
    </maplink>
  </maplinks>
</map>
