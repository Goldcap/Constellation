<project name="AkamaiToken" default="dist" basedir=".">
    <description>
        Akamai EdgeAuth 2.0 token generator
    </description>

  <property name="src" location="src"/>
  <property name="build" location="build"/>
  <property name="dist"  location="dist"/>

  <target name="init">
    <tstamp/>
    <mkdir dir="${build}"/>
  </target>

  <target name="compile" depends="init" description="compile the source " >
    <javac srcdir="${src}" destdir="${build}"/>
  </target>

  <target name="dist" depends="compile" description="generate the distribution" >
    <mkdir dir="${dist}/lib"/>
    <jar jarfile="${dist}/lib/AkamaiToken-${DSTAMP}.jar" basedir="${build}">
		<manifest>
			<attribute name="Main-Class" value="com.akamai.edgeauth.AkamaiEdgeAuthCLI"/>
		</manifest>
	</jar>
  </target>

  <target name="clean" description="clean up" >
    <delete dir="${build}"/>
    <delete dir="${dist}"/>
  </target>
</project>

